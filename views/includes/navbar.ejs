<style>
/* SEARCH CENTER (never collapses) */
.search-center {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.search-form {
  display: flex;
  align-items: center;
}

/* Input */
.search-inp {
  border-radius: 14px;
  padding: 0.2rem 1.4rem;
  font-size: 0.8rem;
  border: 1px solid #ddd;
}

.search-inp:focus {
  border-color: rgb(255, 0, 0);
  box-shadow: 0 0 0 2px rgba(255, 0, 0, 0.15);
}

/* Button */
.search-btn {
  background-color: rgb(255, 0, 0);
  color: #fff;
  border-radius: 14px;
  padding: 0.2rem 0.6rem;
  font-size: 0.8rem;
  border: none;
  margin-left: 0.3rem;
}

/* ðŸ“± Mobile adjustments */
@media (max-width: 768px) {

  .search-center {
    position: static;          /* ðŸ”¥ IMPORTANT: absolute hatao */
    transform: none;           /* ðŸ”¥ center transform reset */
 
    display: flex;
    justify-content: center;   /* center horizontally */
    margin: 0.5rem 0;
  }

  .search-form {
    display: flex;
    justify-content: center;
    width: 100%;
  }

  .search-inp {
    width: 65%;
    max-width: 230px;
  }


.nav-link {
    justify-content: flex-end;
    width: 100%;
    text-align: right;
  }

}


/* ðŸ“± Mobile: hide Explore */
@media (max-width: 767.98px) {
  .Explore1 {
    display: none !important;
  }
}

/* ðŸ–¥ Desktop: hide Explore2 */
@media (min-width: 768px) {
  .Explore2 {
    display: none !important;
  }



}


</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid align-items-center">

    <!-- LEFT: LOGO -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>
  <a class="nav-link Explore1" href="/listings">Explore</a>
    <!-- ðŸ” SEARCH (NEVER COLLAPSE, ALWAYS CENTER) -->
    <div class="search-center">
      <form class="search-form" role="search" action="/listings" method="GET">
        <input
          class="form-control search-inp"
          type="search"
          name="q"
          placeholder="Search"
          value="<%= typeof q !== 'undefined' ? q : '' %>"
        />
        <button class="search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>
    </div>

    <!-- TOGGLER (ONLY FOR LINKS) -->
    <button class="navbar-toggler ms-auto" type="button"
      data-bs-toggle="collapse" data-bs-target="#navbarLinks">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- COLLAPSE: LINKS ONLY -->
    <div class="collapse navbar-collapse" id="navbarLinks">

      <div class="navbar-nav ms-auto">
        <a class="nav-link Explore2" href="/listings">Explore</a>
        <a class="nav-link" href="/listings/new">ADD NEW POST</a>

        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link" href="/login"><b>Log In</b></a>
          <a class="nav-link text-danger" href="/admin/login"><b>Admin</b></a>
        <% } else { %>
          <span class="nav-link disabled">
            Hello, <%= currUser.username %>
          </span>

          <% if (currUser.isAdmin) { %>
            <a class="nav-link text-danger fw-bold" href="/admin/dashboard">
              Admin Panel
            </a>
            <a class="nav-link" href="/admin/logout">Admin Logout</a>
          <% } else { %>
            <a class="nav-link" href="/logout"><b>Log Out</b></a>
          <% } %>
        <% } %>
      </div>

    </div>
  </div>
</nav>
