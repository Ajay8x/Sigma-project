<style>
  .search-btn{
    background-color: rgb(255, 0, 0);
    color: white;
    border-radius: 20px;
    padding: 0 1rem;
  }
  .search-btn:hover{
    background-color: rgb(255, 0, 0);
    color: white;
  }
  .search-inp{
    border-radius:25px ;
    padding: 0.25rem 3rem;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- LOGO -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <!-- LEFT LINKS -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- SEARCH -->
      <div class="navbar-nav mx-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 search-inp"
            type="search" placeholder="Search destinations" />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>
      </div>

      <!-- RIGHT LINKS -->
      <div class="navbar-nav ms-auto">

        <a class="nav-link" href="/listings/new">ADD NEW POST</a>

        <% if (!currUser) { %>
          <!-- NORMAL USER -->
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link" href="/login"><b>Log In</b></a>

          <!-- ADMIN LOGIN -->
          <a class="nav-link text-danger" href="/admin/login">
            <b>Admin</b>
          </a>

        <% } else { %>

          <span class="nav-link disabled">
            Hello, <%= currUser.username %>
          </span>

          <% if (currUser.isAdmin) { %>
            <!-- ADMIN PANEL -->
            <a class="nav-link text-danger fw-bold"
               href="/admin/dashboard">
              Admin Panel
            </a>
            <a class="nav-link" href="/admin/logout">
              Admin Logout
            </a>
          <% } else { %>
            <!-- NORMAL USER LOGOUT -->
            <a class="nav-link" href="/logout">
              <b>Log Out</b>
            </a>
          <% } %>

        <% } %>

      </div>
    </div>
  </div>
</nav>
